{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}


<table class="table">
  <thead>
    <tr>
      <th scope="col">#Id</th>
      <th scope="col">Titre</th>
      <th scope="col">Description</th>
      <th scope="col">Auteur</th>
      <th scope="col">Publication</th>
      <th scope="col">Illustration</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
{% for article in articles %}
    <tr>
      <th scope="row">{{article.id}}</th>
      <td>{{article.titre}}</td>
      <td>{{article.description}}</td>
      <td>{{article.auteur}}</td>
      <td>{{article.publication | date('d/m/y')}}</td>
      <td> <img style="width:120px;" src="{{article.photo}}" alt=""> </td>
      <td>
       <a href="{{path('app_article_edit',{id: article.id})}}"><i class="text-warning fa fa-edit"></i></a>|
       <a href="{{path('app_article_delete',{id: article.id})}}"><i class="text-danger fa fa-trash"></i></a>
      </td>
    </tr>
{% endfor %}
  </tbody>
</table>

{% endblock %}
