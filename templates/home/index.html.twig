{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<h1 class="text-center text-muted">Bienvenue sur le super blog </h1>
<section class="container m-5">
    <div class="row">
        {% for article in articles %}
            <div class="card col-md-3 m-2" style="width: 18rem;">
            <img style="width:150;" src="{{article.photo}}">
            <div class="card-body">
              <h5 class="card-title">{{article.titre}}</h5>
              <p class="card-text">{{article.description}}</p>
              <a href="#" class="btn btn-primary">{{article.auteur}}</a><br>
              <span>{{article.publication | date('d-M-y')}}</span><br>
                {% if is_granted ("ROLE_ADMIN")  %}
              <a href="{{path('app_article_delete',{id: article.id})}}"class="text-danger">Supprimer</a><br>
              <a href="{{path('app_article_edit',{id: article.id})}}"class="text-warning">Modifier</a>
                 {% endif %}
            </div>
          </div>
        {% endfor %}
        </div>
</section>
{% endblock %}
