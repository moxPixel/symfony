{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

  <!-- Header-->
  <header class="bg-dark py-5">
      <div class="container px-4 px-lg-5 my-5">
          <div class="text-center text-white">
              <h1 class="display-4 fw-bolder">Mon blog</h1>
              <p class="lead fw-normal text-white-50 mb-0">Retrouver toute tes actus du moment</p>
          </div>
      </div>
  </header>
  <!-- Section-->
  <section class="py-5">
      <div class="container px-4 px-lg-5 mt-5">
          <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            {% for article in articles %}
              <div class="col mb-5">
                  <div class="card h-100">
                      <!-- Product image-->
                      <img style="width:150;" src="{{article.photo}}">
                      <!-- Product details-->
                      <div class="card-body p-4">
                          <div class="text-center">
                              <!-- Product name-->
                              <h5 class="fw-bolder">{{article.titre}}</h5>
                              <!-- Product price-->
                              {{article.publication | date('d-M-y')}}
                          </div>
                      </div>
                      <!-- Product actions-->
                      <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                          <div class="text-center">
                            {% if is_granted ("ROLE_ADMIN")  %}
                            <a href="{{path('app_article_delete',{id: article.id})}}"class="text-danger">Supprimer</a><br>
                            <a href="{{path('app_article_edit',{id: article.id})}}"class="text-warning">Modifier</a>
                               {% endif %}
                               <br>
                            <a href="{{path('app_view_article',{id: article.id})}}"class="text-success">Voir</a>
                          </div>
                      </div>
                  </div>
              </div>
            {% endfor %}
          </div>
      </div>
  </section>
  <!-- Footer-->
  <footer class="py-5 bg-dark">
      <div class="container"><p class="m-0 text-center text-white">Copyright Â© Your Website 2022</p></div>
  </footer>

{% endblock %}
